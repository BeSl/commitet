<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      xmlns:c="http://jmix.io/schema/flowui/jpql-condition"
      title="msg://projectListSelect.title"
      focusComponent="projectsDataGrid">
    <data>
        <collection id="projectsDc"
                    class="com.company.commitet_jm.entity.Project">
            <fetchPlan extends="_base"/>
            <loader id="projectsDl" readOnly="true">
                <query>
                    <![CDATA[select e from Project e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <urlQueryParameters>
            <pagination component="pagination"/>
        </urlQueryParameters>
    </facets>
    <actions>
        <action id="selectAction" type="lookup_select"/>
        <action id="discardAction" type="lookup_discard"/>
        <action id="selectAction_1" type="lookup_select"/>
    </actions>
    <layout>
        <hbox id="buttonsPanel" classNames="buttons-panel">
            <button id="refreshButton" action="projectsDataGrid.refreshAction"/>
            <simplePagination id="pagination" dataLoader="projectsDl"/>
        </hbox>
        <dataGrid id="projectsDataGrid"
                  width="100%"
                  minHeight="20em"
                  dataContainer="projectsDc">
            <actions>
                <action id="refreshAction" type="list_refresh"/>
            </actions>
            <columns resizable="true">
                <column property="name"/>
            </columns>
        </dataGrid>
        <hbox id="lookupActions" visible="false">
            <button id="selectButton" action="selectAction"/>
            <button id="discardButton" action="discardAction"/>
        </hbox>
    </layout>
</view>
