<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://availableNameListView.title"
      focusComponent="availableNamesDataGrid">
    <data>
        <collection id="availableNamesDc" class="com.company.commitet_jm.entity.AvailableName">
            <fetchPlan extends="_base">
                <property name="project" fetchPlan="_base"/>
            </fetchPlan>
            <loader id="availableNamesDl" readOnly="true">
                <query>
                    <![CDATA[select e from AvailableName e order by e.project.name, e.type, e.name]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <actions>
        <action id="selectAction" type="lookup_select"/>
        <action id="discardAction" type="lookup_discard"/>
    </actions>
    <layout>
        <hbox id="buttonsPanel" classNames="buttons-panel">
            <button id="createBtn" action="availableNamesDataGrid.create"/>
            <button id="editBtn" action="availableNamesDataGrid.edit"/>
            <button id="removeBtn" action="availableNamesDataGrid.remove"/>
            <simplePagination id="pagination" dataLoader="availableNamesDl"/>
        </hbox>
        <dataGrid id="availableNamesDataGrid"
                  width="100%"
                  minHeight="20em"
                  dataContainer="availableNamesDc"
                  columnReorderingAllowed="true">
            <actions>
                <action id="create" type="list_create"/>
                <action id="edit" type="list_edit"/>
                <action id="remove" type="list_remove"/>
            </actions>
            <columns resizable="true">
                <column property="project.name" header="Проект"/>
                <column property="type" header="Тип"/>
                <column property="name" header="Имя"/>
                <column property="description" header="Описание"/>
                <column property="lastUpdated" header="Обновлено"/>
            </columns>
        </dataGrid>
        <hbox id="lookupActions" visible="false">
            <button id="selectBtn" action="selectAction"/>
            <button id="discardBtn" action="discardAction"/>
        </hbox>
    </layout>
</view>
