<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">

    <changeSet id="create-config-metadata-item" author="commitet_jm">
        <createTable tableName="CONFIG_METADATA_ITEM">
            <column name="ID" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="EXTERNAL_ID" type="VARCHAR(255)">
                <constraints nullable="true"/>
            </column>
            <column name="NAME" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="METADATA_TYPE" type="VARCHAR(50)">
                <constraints nullable="true"/>
            </column>
            <column name="IS_COLLECTION" type="BOOLEAN">
                <constraints nullable="true"/>
            </column>
            <column name="SORT_ORDER" type="INT">
                <constraints nullable="true"/>
            </column>
            <column name="FULL_PATH" type="VARCHAR(1000)">
                <constraints nullable="true"/>
            </column>
            <column name="PARENT_ID" type="UUID">
                <constraints nullable="true"/>
            </column>
            <column name="PROJECT_ID" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="VERSION" type="INT">
                <constraints nullable="true"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="create-config-metadata-item-indexes" author="commitet_jm">
        <createIndex indexName="IDX_CMI_PROJECT" tableName="CONFIG_METADATA_ITEM">
            <column name="PROJECT_ID"/>
        </createIndex>
        <createIndex indexName="IDX_CMI_PARENT" tableName="CONFIG_METADATA_ITEM">
            <column name="PARENT_ID"/>
        </createIndex>
        <createIndex indexName="IDX_CMI_EXTERNAL_ID" tableName="CONFIG_METADATA_ITEM">
            <column name="EXTERNAL_ID"/>
        </createIndex>
        <createIndex indexName="IDX_CMI_FULL_PATH" tableName="CONFIG_METADATA_ITEM">
            <column name="FULL_PATH"/>
        </createIndex>
    </changeSet>

    <changeSet id="create-config-metadata-item-fk" author="commitet_jm">
        <addForeignKeyConstraint baseTableName="CONFIG_METADATA_ITEM"
                                 baseColumnNames="PARENT_ID"
                                 referencedTableName="CONFIG_METADATA_ITEM"
                                 referencedColumnNames="ID"
                                 constraintName="FK_CMI_PARENT"
                                 onDelete="CASCADE"/>
        <addForeignKeyConstraint baseTableName="CONFIG_METADATA_ITEM"
                                 baseColumnNames="PROJECT_ID"
                                 referencedTableName="PROJECT"
                                 referencedColumnNames="ID"
                                 constraintName="FK_CMI_PROJECT"
                                 onDelete="CASCADE"/>
    </changeSet>

</databaseChangeLog>
